{
    "name": "jacobaldrich/decorator-pattern",
    "description": "Decorator Pattern example in PHP",
    "authors": [
        {
            "name": "Jaco Baldrich",
            "email": "hello@jacobaldrich.com"
        }
    ],
    "require": {
        "php": ">=7.2"
    },
    "autoload": {
        "psr-4": {
            "JacoBaldrich\\DecoratorPattern\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JacoBaldrich\\DecoratorPattern\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true
    },
    "require-dev": {
        "phpunit/phpunit": "^8"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --bootstrap vendor/autoload.php tests --testdox"
    }
}
